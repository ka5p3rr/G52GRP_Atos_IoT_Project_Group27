<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<StackPane style="-fx-background-color: #1A296B;" xmlns="http://javafx.com/javafx/8.0.171"
           xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="uk.ac.nottingham.controllers.WelcomeScreenController">
    <children>
        <GridPane alignment="CENTER">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints vgrow="SOMETIMES"/>
                <RowConstraints vgrow="SOMETIMES"/>
                <RowConstraints vgrow="SOMETIMES"/>
                <RowConstraints vgrow="SOMETIMES"/>
            </rowConstraints>
            <children>
                <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0"
                      style="-fx-background-color: #18194F;">
                    <children>
                        <ImageView fitWidth="350.0" preserveRatio="true">
                            <image>
                                <Image url="@../resources/logowhite.png"/>
                            </image>
                            <HBox.margin>
                                <Insets bottom="25.0" left="25.0" right="25.0" top="25.0"/>
                            </HBox.margin>
                        </ImageView>
                        <Text fill="WHITE" strokeType="OUTSIDE" strokeWidth="0.0"
                              text="by GROUP 27">
                            <font>
                                <Font name="System Bold" size="80.0"/>
                            </font>
                            <HBox.margin>
                                <Insets left="100.0"/>
                            </HBox.margin>
                        </Text>
                    </children>
                </HBox>
                <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" GridPane.rowIndex="1">
                    <children>
                        <Button alignment="CENTER" contentDisplay="CENTER" focusTraversable="false"
                                mnemonicParsing="false" onAction="#launchScenarios"
                                prefWidth="425.0" style="-fx-background-color: #D81B60;" text="Demo"
                                textAlignment="CENTER" textFill="WHITE">
                            <font>
                                <Font name="System Bold" size="45.0"/>
                            </font>
                            <opaqueInsets>
                                <Insets/>
                            </opaqueInsets>
                            <HBox.margin>
                                <Insets bottom="25.0" left="25.0" right="25.0" top="25.0"/>
                            </HBox.margin>
                        </Button>
                        <Button alignment="CENTER" contentDisplay="CENTER" focusTraversable="false"
                                mnemonicParsing="false" onAction="#launchNotificationDemo"
                                prefWidth="425.0" style="-fx-background-color: #D81B60;"
                                text="Notification Test" textAlignment="CENTER" textFill="WHITE">
                            <font>
                                <Font name="System Bold" size="45.0"/>
                            </font>
                            <opaqueInsets>
                                <Insets/>
                            </opaqueInsets>
                            <HBox.margin>
                                <Insets bottom="25.0" left="25.0" right="25.0" top="25.0"/>
                            </HBox.margin>
                        </Button>
                    </children>
                </HBox>
                <Button alignment="CENTER" contentDisplay="CENTER" focusTraversable="false"
                        mnemonicParsing="false" onAction="#createNetworkInformationDialog"
                        style="-fx-background-color: #D81B60;" text="Connection information"
                        textAlignment="CENTER" textFill="WHITE" GridPane.halignment="RIGHT"
                        GridPane.rowIndex="3" GridPane.valignment="BOTTOM">
                    <font>
                        <Font name="System Bold" size="15.0"/>
                    </font>
                    <GridPane.margin>
                        <Insets bottom="20.0" right="20.0"/>
                    </GridPane.margin>
                </Button>
            </children>
        </GridPane>
    </children>
</StackPane>
